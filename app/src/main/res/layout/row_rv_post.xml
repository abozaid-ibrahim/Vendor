<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/post_rv_item_menu_height"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <include
                    android:id="@+id/main_row_logo"
                    layout="@layout/rounded_imageview"
                    android:layout_width="80.0dip"
                    android:layout_height="80dp"
                    android:src="@drawable/profile"/>

                <TextView
                    android:id="@+id/main_row_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="5.0dip"/>

                <TextView
                    android:id="@+id/main_row_date"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="5.0dip"/>
            </LinearLayout>

            <ImageButton
                android:id="@+id/main_row_menu"
                android:layout_width="60.0dip"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.0dip"
                android:background="@null"
                android:padding="5.0dip"
                android:src="@drawable/menu"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_menu"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/post_rv_item_menu_height"
            android:layout_gravity="end"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/main_row_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.0dip"
                android:src="@drawable/edit"
                android:text=""/>

            <ImageView
                android:id="@+id/main_row_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.0dip"
                android:src="@drawable/delete"
                android:text=""/>

            <ImageView
                android:id="@+id/main_row_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/report"
                android:text=""/>
        </LinearLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/main_row_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5.0dip"

        android:padding="5.0dip"/>

    <ImageView
        android:id="@+id/main_row_image"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/large_image_height"
        android:layout_marginTop="5.0dip"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5.0dip">

        <ImageButton
            android:id="@+id/main_row_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/like"/>

        <ImageButton
            android:id="@+id/main_row_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/comment"/>

        <TextView
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:text=""/>
    </LinearLayout>
</LinearLayout>