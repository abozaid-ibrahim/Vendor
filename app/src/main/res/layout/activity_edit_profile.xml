<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical">

    <include layout="@layout/default_toolbar"/>

    <include layout="@layout/activity_progress"/>

    <android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:fitsSystemWindows="true"
                                                android:paddingBottom="@dimen/activity_vertical_margin"
                                                android:paddingLeft="@dimen/activity_horizontal_margin"
                                                android:paddingRight="@dimen/activity_horizontal_margin"
                                                android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:id="@+id/main_layout"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"

                android:orientation="vertical">

                <com.pkmmte.view.CircularImageView
                    android:id="@+id/edit_porfile_image"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:border="true"
                    android:layout_gravity="center"
                    app:border_color="@color/circular_image_border_color"
                    app:border_width="4dp"
                    app:shadow="true"/>

                <Button
                    android:id="@+id/edit_btn_uploadimage"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom"
                    android:background="#1d000000"
                    android:text="@string/change_image"
                    android:textColor="#FFF"/>
            </FrameLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.Design.TextInputLayout"
                android:layout_marginBottom="5dp"
                android:background="@color/textInputLayoutBG">

                <EditText
                    android:id="@+id/edit_et_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/user_name"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
            >

                <EditText
                    android:id="@+id/edit_et_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@color/textInputLayoutBG">

                <EditText
                    android:id="@+id/edit_et_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/mobile"
                    android:inputType="phone"/>

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@color/textInputLayoutBG">

                <EditText
                    android:id="@+id/edit_et_hashtag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hashtag"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@color/textInputLayoutBG">

                <EditText
                    android:id="@+id/edit_et_facebook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/facebook"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@color/textInputLayoutBG">

                <EditText
                    android:id="@+id/edit_et_twitter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/twitter"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@color/textInputLayoutBG">

                <EditText
                    android:id="@+id/edit_et_website"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/website"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@color/textInputLayoutBG"
                >

                <EditText

                    android:id="@+id/edit_et_instagram"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/instagram"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/textInputLayoutBG"
                >

                <EditText
                    android:id="@+id/edit_et_about"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="top"
                    android:hint="@string/about"/>

            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/edit_btn_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"

                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/change_password"/>

            <Button
                android:id="@+id/edit_btn_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/Update"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>