<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/post_rv_item_menu_height"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/main_row_menu"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@null"
                android:padding="5dp"
                android:src="@drawable/menu" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/main_row_name"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:padding="5dp" />

                <TextView
                    android:id="@+id/main_row_date"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:padding="5dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/main_row_logo"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/usericon" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/main_menu"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/post_rv_item_menu_height"
            android:layout_marginLeft="60dp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:src="@drawable/edit"

                android:id="@+id/main_row_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="" />

            <ImageView
                android:src="@drawable/delete"

                android:id="@+id/main_row_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="" />
            <ImageView
                android:src="@drawable/report"
                android:id="@+id/main_row_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>


    </FrameLayout>

    <TextView
        android:id="@+id/main_row_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="right"
        android:padding="5dp" />

    <ImageView
        android:id="@+id/main_row_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/large_image_height"
        android:layout_marginTop="5dp"
        android:src="@drawable/logo_2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:text="" />

        <ImageButton
            android:id="@+id/main_row_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/comment" />

        <ImageButton

            android:id="@+id/main_row_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/like" />
    </LinearLayout>


</LinearLayout>
